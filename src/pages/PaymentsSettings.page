<apex:page id="NPSPPaymentsSettings" controller="PaymentsSettings" action="{!getSettingsFirstTime}">
	<apex:form id="form">	
		<apex:sectionHeader title="Payments Settings" subtitle="Configure Settings">
			<description>
				Settings that control the behavior of the Payments functionality. Changing these will change how your Nonprofit Starter Pack behaves.
			</description>	
		</apex:sectionHeader>
		
		<apex:pageMessages id="pageMessages"/>
		<apex:pageBlock id="Paymentssettings" title="Payments Settings">		 
	    	<apex:pageBlockSection id="enabledsection" title="Enable Payments" columns="1">
	       	<apex:outputPanel >{!$Label.Payments_Settings_Enable_Help_Text}</apex:outputPanel>
				<apex:inputfield value="{!settings.Payments_Enabled__c}"/>		
			</apex:pageBlockSection>
			<apex:pageBlockButtons id="paymentssettingsbuttons">
				<apex:commandButton id="updatesettingsbutton" action="{!updateSettings}" value="Update the Payments Settings" />
			</apex:pageBlockButtons> 
		</apex:pageBlock>
	</apex:form>	
</apex:page>